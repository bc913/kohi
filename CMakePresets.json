{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ninja_multi_base",
            "displayName": "Config ninja base preset",
            "generator": "Ninja Multi-Config",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "strategy": "external"
            }
        },
        {
            "name": "ninja_multi",
            "displayName": "Ninja Multi",
            "inherits": "ninja_multi_base",
            "hidden": false,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang",
                "KOHI_USE_VOLK_LOADER": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ninja_debug",
            "configurePreset": "ninja_multi",
            "configuration": "Debug"
        },
        {
            "name": "ninja_debug_clean",
            "configurePreset": "ninja_multi",
            "configuration": "Debug",
            "cleanFirst": true
        },
        {
            "name": "ninja_release",
            "configurePreset": "ninja_multi",
            "configuration": "Release"
        },
        {
            "name": "ninja_release_clean",
            "configurePreset": "ninja_multi",
            "configuration": "Release",
            "cleanFirst": true
        },
        {
            "name": "ninja_rel_deb_info",
            "configurePreset": "ninja_multi",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "ninja_min_size_rel",
            "configurePreset": "ninja_multi",
            "configuration": "MinSizeRel"
        }
    ],
    "testPresets": [
        {
            "name": "base",
            "description": "",
            "displayName": "",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "ninja_test",
            "hidden": false,
            "inherits": "base",
            "configurePreset": "ninja_multi"
        }
    ]
}